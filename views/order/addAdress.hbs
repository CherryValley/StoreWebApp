<!DOCTYPE html>
<html>
<head>
  <title>{{title}}</title>
  <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,user-scalable=no" />
  <meta content="yes" name="apple-mobile-web-app-capable">
  <meta content="black" name="apple-mobile-web-app-status-bar-style">
  <meta content="telephone=no" name="format-detection">
  <meta name="msapplication-tap-highlight" content="no">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="HandheldFriendly" content="true">
  <meta name="MobileOptimized" content="320">
  <meta name="screen-orientation" content="portrait">
  <meta name="x5-orientation" content="portrait">
  <meta name="full-screen" content="yes">
  <meta name="x5-fullscreen" content="true">
  <meta name="browsermode" content="application">
  <meta name="x5-page-mode" content="app">
  <meta name="msapplication-tap-highlight" content="no">
  <link rel="stylesheet" type="text/css" href="/stylesheets/basic.css" />
  <link rel="stylesheet" href="/stylesheets/iconfont.css" />
  <script type="text/javascript" src="/javascripts/view/font.js"></script>
  <script src="/javascripts/jquery-2.2.0/jquery-2.2.0.min.js"></script>
  <link rel="stylesheet" href="/stylesheets/view/order/order.css" />
  <link rel="stylesheet" href="/stylesheets/view/city/ydui.css" />
</head>
<body bgcolor="#f5f1f9">
<div class="main">
  <header>
    <a href="#" class="goodslist_arrow"><i class="iconfont icon-left-arrow"></i></a>
    <nav class="goods clearfix">
      <ul>
        <li>添加收货地址</li>
      </ul>
    </nav>
  </header>
  <section class="container">
    <section class="add_address_groups">
      <form action="" method="">
        <section class="g-flexview">
          <section class="g-scrollview">
            <div class="m-cell">
              <div class="cell-item">
                <div class="cell-left">
                <span class="lan-cn">所在地区：</span>
                <span class="lan-en hidden">Region:</span>
                </div>
                <div class="cell-right cell-arrow">
                  <input type="text" class="cell-input" readonly id="J_Address" placeholder="请选择收货地址">
                </div>
              </div>
            </div>
          </section>

          <label>
            <p>详细地址</p>
            <!--<span></span>-->
            <input type="text"  placeholder="请输详细地址"/>
          </label>
          <label>
            <p>收 件 人</p>
            <!--<span></span>-->
            <input type="text"  placeholder="请输入真实性名"/>
          </label>

          <label>
            <p>收 件 人</p>
            <!--<span></span>-->
            <input type="text"  placeholder="请输联系电话"/>

          </label>
          <label>
            <p>所在地址</p>
            <!--<span></span>-->
            <input type="text"  placeholder="请选择地区"/>

          </label>
          <div class="choose_address">
            <p>
            <span class="lan-cn">设为默认地址</span>
            <span class="lan-en hidden">Set it as the default address</span>
            <br><small>
            <span class="lan-cn">注：每次下单会使用该地址</span>
            <span class="lan-en hidden">Note: this address will be used for each order</span>
            </small></p>
            <button id="btn-type"><i class="iconfont icon-kaiguanguan-copy1"></i></button>
          </div>
        </section>
      </form>
    </section>
  </section>
</div>
<!--选择城市js-->
<script src="/javascripts/view/city/ydui.flexible.js"></script>
<script src="/javascripts/view/city/ydui.citys.js"></script>
<script src="/javascripts/view/city/ydui.js"></script>
<script>
  ! function() {
    var $target = $('#J_Address');

    $target.citySelect();

    $target.on('click', function(event) {
      event.stopPropagation();
      $target.citySelect('open');
    });

    $target.on('done.ydui.cityselect', function(ret) {
      $(this).val(ret.provance + ' ' + ret.city + ' ' + ret.area);
    });
  }();
</script>
</body>
</html>
